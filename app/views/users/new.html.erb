<h1>Fill the form out below and you can get started right away!</h1>

<%= form_for(@user, url: signup_path, html: { class: "form-horizontal" }) do |f| %>
<div class="form-group">
  <%= f.label "Name:", class: "control-label col-sm-2" %>
  <div class="col-sm-10">
  <%= f.text_field :name, placeholder: "Optional", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Email:", class: "control-label col-sm-2" %>
  <div class="col-sm-10">
  <%= f.text_field :email, placeholder: "Optional", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Username:", class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= f.text_field :username, placeholder: "Required", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Password:", class: "control-label col-sm-2" %>
  <div class="col-sm-10">
  <%= f.password_field :password, placeholder: "At least 6 characters long", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label "Password Confirmation:", class: "control-label col-sm-2" %>
  <div class="col-sm-10">
  <%= f.password_field :password_confirmation, placeholder: "Repeat password", class: "form-control" %>
  </div>
</div>

<div class="col-sm-10">
  <%= f.submit "Create my account", class: "btn btn-primary" %>
</div>

<% end %>
